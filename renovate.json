{
  "extends": ["config:base"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "masterIssue": true,
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "excludePackageNames": [
        "vue",
        "vue-server-renderer",
        "vue-template-compiler",
        "@nuxt/kit",
        "@nuxt/types",
        "nuxt"
      ]
    },
    {
      "matchSourceUrlPrefixes": ["https://github.com/nuxt/eslint-config"],
      "groupName": "@nuxtjs/eslint-config"
    },
    {
      "packageNames": ["sass"],
      "enabled": false
    },
    {
      "packageNames": ["vue", "vue-server-renderer", "vue-template-compiler"],
      "allowedVersions": "<=2",
      "enabled": true,
      "groupName": "Nuxt.js"
    },
    {
      "packageNames": ["@nuxt/kit", "@nuxt/types", "nuxt"],
      "allowedVersions": "<=2",
      "enabled": true,
      "groupName": "Nuxt.js"
    },
    {
      "matchPackageNames": ["graphql-request"],
      "allowedVersions": "<=5.1",
      "enabled": true
    }
  ],
  "postUpdateOptions": ["yarnDedupeHighest"]
}
