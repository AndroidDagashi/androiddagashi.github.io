{
  "extends": [
    "config:base"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "masterIssue": true,
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "excludePackageNames": [
        "vue",
        "vue-server-renderer",
        "vue-template-compiler",
        "@nuxt/devtools",
        "@nuxt/eslint",
        "@nuxt/kit",
        "@nuxt/types",
        "nuxi",
        "nuxt",
        "@nuxtjs/tailwindcss",
        "node",
        "@types/node"
      ]
    },
    {
      "packageNames": [
        "node",
        "@types/node"
      ],
      "allowedVersions": "<=22",
      "groupName": "Node.js"
    },
    {
      "packageNames": [
        "vue",
        "vue-tsc"
      ],
      "allowedVersions": "<=3",
      "enabled": true,
      "groupName": "Vue.js"
    },
    {
      "packageNames": [
        "@nuxt/devtools",
        "@nuxt/eslint",
        "@nuxt/kit",
        "@nuxt/types",
        "nuxi",
        "nuxt"
      ],
      "enabled": true,
      "groupName": "Nuxt.js"
    },
    {
      "matchPackageNames": [
        "graphql-request"
      ],
      "enabled": true
    }
  ],
  "postUpdateOptions": [
    "yarnDedupeHighest"
  ]
}
