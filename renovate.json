{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":pinDependencies",
    ":pinDevDependencies",
    "helpers:pinGitHubActionDigests"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackageNames": [
        "*",
        "!vue",
        "!vue-server-renderer",
        "!vue-template-compiler",
        "!@nuxt/devtools",
        "!@nuxt/eslint",
        "!@nuxt/kit",
        "!@nuxt/types",
        "!nuxi",
        "!nuxt",
        "!@nuxtjs/tailwindcss",
        "!node",
        "!@types/node"
      ]
    },
    {
      "matchPackageNames": [
        "node",
        "@types/node"
      ],
      "allowedVersions": "<=24",
      "groupName": "Node.js"
    },
    {
      "matchPackageNames": [
        "vue",
        "vue-tsc"
      ],
      "allowedVersions": "<=3",
      "enabled": true,
      "groupName": "Vue.js"
    },
    {
      "matchPackageNames": [
        "@nuxt/devtools",
        "@nuxt/eslint",
        "@nuxt/kit",
        "@nuxt/types",
        "nuxi",
        "nuxt"
      ],
      "enabled": true,
      "groupName": "Nuxt.js"
    },
    {
      "matchPackageNames": [
        "graphql-request"
      ],
      "enabled": true
    }
  ],
  "postUpdateOptions": [
    "yarnDedupeHighest"
  ]
}
