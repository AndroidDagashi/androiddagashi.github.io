{
  "extends": "@nuxt/typescript",
  "include": [
    "./apollo/**/*",
    "./components/**/*",
    "./layouts/**/*",
    "./middleware/**/*",
    "./pages/**/*",
    "./plugins/**/*",
    "./store/**/*",
    "./types/**/*"
  ],
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": [
      "@types/node",
      "@nuxt/vue-app"
    ],
    "allowJs": true,
    "paths": {
      "~/": ["./"],
      "~/assets/*": ["./assets/*"],
      "~/components/*": ["./components/*"],
      "~/middleware/*": ["./middleware/*"],
      "~/pages/*": ["./pages/*"],
      "~/plugins/*": ["./plugins/*"],
      "~/static/*": ["./static/*"],
      "~/store/*": ["./store/*"],
      "~/types/*": ["./types/*"]
    }
  }
}
